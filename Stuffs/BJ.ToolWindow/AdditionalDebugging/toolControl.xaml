<UserControl x:Class="AdditionalDebugging.toolControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vsshell="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
             Background="{DynamicResource {x:Static vsshell:VsBrushes.WindowKey}}"
             Foreground="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             Name="MyToolWindow">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Menu Height="23" VerticalAlignment="Top">
                <MenuItem x:Name="mnuNewDebugging" Header="N" Height="23" Width="23" Click="mnuNewDebugging_Click" VerticalAlignment="Top" HorizontalAlignment="Left" Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}"/>
                <MenuItem x:Name="mnuList" Header="L" Height="23" Width="23" Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}" Click="mnuList_Click">
                </MenuItem>
            </Menu>
            <ListBox x:Name="lstOutput" Height="278"/>
        </StackPanel>
    </Grid>
</UserControl>
